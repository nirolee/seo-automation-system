{
  "name": "seo-automation-system",
  "version": "1.0.0",
  "private": true,
  "description": "全自动化SEO内容站系统 - 从关键词挖掘到内容发布的完整解决方案",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:studio": "cd packages/database && npx prisma studio",
    "setup": "npm install && npm run db:generate"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.2",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "eslint": "^9.17.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.9.2"
}
